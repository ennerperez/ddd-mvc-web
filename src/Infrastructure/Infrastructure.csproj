<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\src\.imports\Template.props" />
    <Import Condition="Exists('Options.props')" Project="Options.props" />
    <Import Project="..\..\src\.imports\Template.targets" />
    <Import Condition="Exists('Options.targets')" Project="Options.targets" />

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugSymbols>true</DebugSymbols>
        <DebugType>none</DebugType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
        <PackageReference Include="Microsoft.Extensions.Http" />
    </ItemGroup>

    <ItemGroup Label="ConditionalReferences">
        <PackageReference Condition="'$(UsingAzureBlobs)' == 'true'" Include="Azure.Storage.Blobs" />
        <PackageReference Condition="'$(UsingAzureQueues)' == 'true'" Include="Azure.Storage.Queues" />
        <PackageReference Condition="'$(UsingAzureTables)' == 'true'" Include="Azure.Data.Tables" />
        <PackageReference Condition="'$(UsingAzureKeyVault)' == 'true'" Include="Azure.Security.KeyVault.Secrets" />
        <PackageReference Condition="'$(UsingAzureKeyVault)' == 'true'" Include="Azure.Identity" />
        <PackageReference Condition="'$(UsingAuth0)' == 'true'" Include="Auth0.ManagementApi" />
        <PackageReference Condition="'$(UsingAuth0)' == 'true'" Include="System.IdentityModel.Tokens.Jwt" />
        <PackageReference Condition="'$(UsingQuestPDF)' == 'true'" Include="QuestPDF" />
        <PackageReference Condition="'$(UsingQuestPDF)' == 'true'" Include="SkiaSharp.NativeAssets.Linux" />
        <PackageReference Condition="'$(UsingQuestPDF)' == 'true'" Include="SkiaSharp.NativeAssets.Linux.NoDependencies" />
        <PackageReference Condition="'$(UsingQuestPDF)' == 'true'" Include="HarfBuzzSharp.NativeAssets.Linux" />
    </ItemGroup>

    <ItemGroup Condition="'$(UsingAzureBlobs)' == 'false'">
        <Compile Remove="Services\FileService.cs" />
        <Compile Remove="Services\DirectoryService.cs" />
    </ItemGroup>
    <ItemGroup Condition="'$(UsingAzureQueues)' == 'false'">
        <Compile Remove="Services\QueueService.cs" />
    </ItemGroup>
    <ItemGroup Condition="'$(UsingAzureTables)' == 'false'">
        <Compile Remove="Services\TableService.cs" />
    </ItemGroup>
    <ItemGroup Condition="'$(UsingAzureKeyVault)' == 'false'">
        <Compile Remove="Services\VaultService.cs" />
    </ItemGroup>
    <ItemGroup Condition="'$(UsingAuth0)' == 'false'">
        <Compile Remove="Factories\Auth0ApiClientFactory.cs" />
        <Compile Remove="Interfaces\IAuth0ApiClientFactory.cs" />
    </ItemGroup>

</Project>
