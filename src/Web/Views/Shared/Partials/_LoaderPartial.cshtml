<div id="loading" class="pt-4">
    <div class="card shadow w-50 my-auto mx-auto">
        <div class="card-body">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                     role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                     style="width: 100%"></div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginScripts())
{
    <script>
        function showLoader() {
            $("#content").hide();
            $("#loading").show();
        }

        function hideLoader() {
            $("#loading").hide();
            $("#content").show();
        }

        $(document).ready(function () {
            showLoader();
        });
    </script>
}