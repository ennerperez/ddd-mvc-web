@model Web.Models.UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col">
                <img src="@Model.ProfileImage"
                     alt="" class="img-rounded img-responsive" />
                <h3>@Model.Name</h3>
                <p>
                    <i class="fa fa-envelope"></i> @Model.EmailAddress
                </p>
            </div>
        </div>
    </div>
</div>