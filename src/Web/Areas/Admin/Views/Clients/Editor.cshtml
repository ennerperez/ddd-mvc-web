<!-- Modal -->
<div class="modal fade" id="modal-editor" tabindex="-1" aria-labelledby="modal-editor-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editor-label">@ViewData["Title"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" data-field="id" id="id"/>
                <div class="mb-3">
                    <label for="identification" class="form-label required">Identification</label>
                    <input id="identification" class="form-control" required
                           data-field="identification"
                           data-validate="true"
                           data-feedback="Please enter a valid identification">
                </div>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input id="fullName" class="form-control"
                           data-field="fullName"
                           data-validate="true"
                           data-feedback="Please enter a valid name">
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label required">Phone</label>
                    <input id="phoneNumber" class="form-control"
                           data-field="phoneNumber"
                           data-validate="true"
                           data-regex="^[0-9]{10,}$"
                           data-feedback="Please enter a valid phone"
                           data-mask="(000) 000-0000">
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea id="address" class="form-control"
                           data-field="address"
                           data-feedback="Please enter a valid address"></textarea>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label required">Category</label>
                    <input id="category" class="form-control" data-field="category">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button name="btn-save" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>