<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup Label="Options">
    <DefaultJsonSerializer>Newtonsoft.Json</DefaultJsonSerializer>
    <UsingSwagger>true</UsingSwagger>
    <UsingLocalization>false</UsingLocalization>
    <UsingInsights>false</UsingInsights>
  </PropertyGroup>
  
  <PropertyGroup>
    <BuildConstants Condition="'$(DefaultJsonSerializer)' == 'Newtonsoft.Json'">$(BuildConstants)NEWTONSOFT;</BuildConstants>
    <BuildConstants Condition="'$(UsingSwagger)' == 'true'">$(BuildConstants)SWAGGER;</BuildConstants>
    <BuildConstants Condition="'$(UsingLocalization)' == 'true'">$(BuildConstants)LOCALIZABLE;</BuildConstants>
    <BuildConstants Condition="'$(UsingInsights)' == 'true'">$(BuildConstants)INSIGHTS;</BuildConstants>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants Condition="'$(BuildConstants)' != ''">$(BuildConstants)$(DefineConstants)</DefineConstants>
  </PropertyGroup>

</Project>