<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\.imports\Template.props" />
    <Import Condition="Exists('Options.props')" Project="Options.props" />
    <Import Project="..\..\.imports\Template.targets" />
    <Import Condition="Exists('Options.targets')" Project="Options.targets" />

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DebugSymbols>true</DebugSymbols>
        <DebugType>none</DebugType>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Domain\Domain.csproj" />
        <ProjectReference Include="..\Infrastructure\Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.5" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Abstractions" Version="7.0.5" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Analyzers" Version="7.0.5" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.5">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="7.0.5" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="7.0.5">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="7.0.4" />
        <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="7.0.0" />
        <PackageReference Include="System.Linq.Dynamic.Core" Version="1.3.2" />
    </ItemGroup>

    <ItemGroup Label="ConditionalReferences">
        <PackageReference Condition="'$(UsingIdentity)' == 'true'" Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="7.0.5" />
        <PackageReference Condition="'$(UsingSqlite)' == 'true'" Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.5" />
        <PackageReference Condition="'$(UsingSqlServer)' == 'true'" Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.5" />
        <PackageReference Condition="'$(UsingMariaDb)' == 'true' OR '$(UsingMySql)' == 'true'" Include="Pomelo.EntityFrameworkCore.MySql" Version="7.0.0" />
        <PackageReference Condition="'$(UsingPostgreSql)' == 'true'" Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="7.0.4" />
        <PackageReference Condition="'$(UsingOracle)' == 'true'" Include="Oracle.EntityFrameworkCore" Version="7.21.9" />
        <PackageReference Condition="'$(UsingDapper)' == 'true'" Include="Dapper" Version="2.0.123" />
    </ItemGroup>

    <ItemGroup Label="UsingBulk" Condition="'$(UsingBulk)' == 'true'">
        <PackageReference Include="EFCore.BulkExtensions" Version="7.1.0" />
        <!--
        <PackageReference Condition="$(UsingSqlite) == 'true'" Include="EFCore.BulkExtensions.Sqlite" Version="6.7.0" />
        <PackageReference Condition="$(UsingSqlServer) == 'true'" Include="EFCore.BulkExtensions.SqlServer" Version="6.7.0" />
        <PackageReference Condition="$(UsingMariaDb) == 'true' OR '$(UsingMySql)' == 'true'" Include="EFCore.BulkExtensions.PostgreSql" Version="6.7.0" />
        <PackageReference Condition="$(UsingPostgreSql) == 'true'" Include="EFCore.BulkExtensions.MySql" Version="6.7.0" />
        -->
    </ItemGroup>

    <ItemGroup Condition="'$(UsingIdentity)' == 'false'">
        <Compile Remove="Configurations\IdentityConfiguration.cs" />
        <Compile Remove="Services\Identity\**" />
        <None Remove="Services\Identity\**" />
        <EmbeddedResource Remove="Services\Identity\**" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Contexts\DefaultContext.*.cs">
            <DependentUpon>DefaultContext.cs</DependentUpon>
        </Compile>
    </ItemGroup>

    <ItemGroup Condition="'$(UsingDabaseProvider)' == 'false'">
        <Compile Remove="Migrations\**" />
        <EmbeddedResource Remove="Migrations\**" />
        <None Remove="Migrations\**" />
    </ItemGroup>

</Project>
